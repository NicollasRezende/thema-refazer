<!-- Seção de Contato -->
<section id="contact" class="contact-section section-padding">
    <div class="contact-container">
        <!-- Informações de Contato -->
        <div class="contact-info">
            <h2>Entre em Contato</h2>
            <p>Estamos à disposição para atendê-lo e tornar sua estadia inesquecível</p>
            
            <!-- Detalhes de Contato -->
            <div class="contact-details">
                <div><i class="fas fa-phone"></i> +55 (11) 99999-9999</div>
                <div><i class="fas fa-envelope"></i> contato@livingstone.com</div>
                <div><i class="fas fa-map-marker-alt"></i> Av. Principal, 1000 - São Paulo, SP</div>
                <div><i class="fas fa-clock"></i> Atendimento 24 horas</div>
            </div>
            
            <!-- Social Media -->
            <div class="contact-social">
                <h4>Siga-nos</h4>
                <div class="social-icons">
                    <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                    <a href="#" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
                    <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
                </div>
            </div>
        </div>
        
        <!-- Formulário de Contato -->
        <form class="contact-form">
            <input type="text" placeholder="Nome" required>
            <input type="email" placeholder="E-mail" required>
            <input type="tel" placeholder="Telefone">
            <select class="form-select">
                <option selected disabled>Motivo do contato</option>
                <option>Informações sobre reservas</option>
                <option>Eventos corporativos</option>
                <option>Feedback</option>
                <option>Outros</option>
            </select>
            <textarea placeholder="Mensagem" required></textarea>
            <button type="submit" class="btn-primary">Enviar Mensagem</button>
        </form>
    </div>
</section>