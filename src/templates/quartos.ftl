<!-- Seção de Quartos -->
<section id="rooms" class="rooms-section section-padding">
    <div class="section-header">
        <h2>Nossos Quartos</h2>
        <p>Descubra o conforto em sua forma mais refinada</p>
    </div>
    
    <!-- Carrossel de Quartos -->
    <div id="roomCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <!-- Indicadores do carrossel -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#roomCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#roomCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#roomCarousel" data-bs-slide-to="2"></button>
        </div>
        
        <!-- Itens do carrossel -->
        <div class="carousel-inner">
            <!-- Suíte Presidencial -->
            <div class="carousel-item active">
                <img src="/documents/d/guest/quarto1" alt="Suíte Presidencial">
                <div class="carousel-caption">
                    <h3>Suíte Presidencial</h3>
                    <p>Luxo e sofisticação em cada detalhe</p>
                    <span class="price">R$ 1.200/noite</span>
                    <a href="#" class="btn-view">Ver detalhes</a>
                </div>
            </div>
            
            <!-- Suíte Executiva -->
            <div class="carousel-item">
                <img src="/documents/d/guest/quarto2" alt="Suíte Executiva">
                <div class="carousel-caption">
                    <h3>Suíte Executiva</h3>
                    <p>Conforto e praticidade para sua viagem de negócios</p>
                    <span class="price">R$ 850/noite</span>
                    <a href="#" class="btn-view">Ver detalhes</a>
                </div>
            </div>
            
            <!-- Suíte Deluxe -->
            <div class="carousel-item">
                <img src="/documents/d/guest/quarto3" alt="Suíte Deluxe">
                <div class="carousel-caption">
                    <h3>Suíte Deluxe</h3>
                    <p>O equilíbrio perfeito entre conforto e elegância</p>
                    <span class="price">R$ 650/noite</span>
                    <a href="#" class="btn-view">Ver detalhes</a>
                </div>
            </div>
        </div>
        
        <!-- Controles do carrossel -->
        <button class="carousel-control-prev" type="button" data-bs-target="#roomCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#roomCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</section>